<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>

	<controlDefinition name="quickSelectionBarButton" controller="de.ethasia.yaumr.customcontrols.implementations.QuickSelectionBarButtonControl">
		<panel width="74px" height="97px" childLayout="center">
			<image id="#buttonFrame" width="100%" height="100%" childLayout="absolute" valign="bottom" filename="Interface/ImagesGUI/HUD/QuickSelectionBar/SelectionBar.png">
				<image width="64px" height="64px" id="#itemImage" x="5" y="28"/>
			</image>
		</panel>
	</controlDefinition>

	<controlDefinition id="$draggableID" name="draggableItemBox" controller="de.ethasia.yaumr.customcontrols.implementations.DraggableItemBoxControl">
		<panel width="74px" height="74px" childLayout="center">
			<image id="#boxFrame" width="100%" height="100%" childLayout="absolute" valign="bottom" filename="Interface/ImagesGUI/HUD/InventoryGrid/InventoryGridBox.png">
				<control id="$draggableID" name="draggable" x="5" y="5" width="64px" height="64px" childLayout="center">
